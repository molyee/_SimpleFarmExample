<?xml version="1.0" encoding="utf-8"?>
<project name="FarmClient">
	<property name="FLEX_HOME" value="w:/portable_apps/sdks/flex_sdk/flex_sdk_4.6" />
	<property name="MAIN" value="w:/WORKSPACE/LazyFarmSolution/PerkyFarmClient" />
	<property name="ENCODING" value="UTF-8" />
	<property name="full.src" value="${MAIN}/src" />
	<property name="full.output" value="${MAIN}/bin-debug" />
