		<mxmlc file="${src}/FarmClient.as" output="${output}/farm_client.swf" actionscript-file-encoding="${ENCODING}" keep-generated-actionscript="false" debug="true">
			<load-config filename="${FLEX_HOME}/frameworks/flex-config.xml" />
