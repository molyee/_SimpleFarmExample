		<exec executable='${compiler}' failonerror='true'>
			<arg line='-output ${full.output}/farm_client.swf' />
			<arg line='-debug=true' />
			<arg line='-as3=true' />
			<arg line='-incremental=false' />
			<arg line='-actionscript-file-encoding=UTF-8' />
			<arg line='-keep-generated-actionscript=false' />
			<arg line='${full.src}/FarmClient.as' />
		</exec>
		<echo>${full.output}/farm_client.swf file successfully compiled</echo>
	</target>
</project>